<div>
    <nav>
        <%= link_to "Home", root_path %>
        <%= link_to "Restaurants", restaurant_index_path %>
        <%= link_to "Chefs", chef_index_path %>
        <%= link_to "Meals", meal_index_path %>
    </nav>
    <div>
        <%= form_with url: "/search", method: :get do |form| %>
        <%= form.label :query, "Search for:" %>
        <%= form.text_field :query %>
        <%= form.select :cuisine, options_for_select(["All"] + @cuisines) %>
        <%= form.submit "Search" %>
        <% end %>
    </div>
</div>