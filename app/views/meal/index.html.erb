<div class="container has-text-centered">
    <h1 class="title is-1">List Of Meals</h1>
</div>

<div class="is-flex is-justify-content-flex-end">
    <%= paginate @meals %>
</div>

<div class="container">
    <table class="table">
    <thead>
        <tr>
            <th>Name of Meal</th>
            <th>Restaurant</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @meals.each do |meal|%>
        <tr>
            <td>
                <%= meal.MealName%>
            </td>
            <td>
                <%= link_to meal.restaurant.RestaurantName, restaurant_path(meal.restaurant) %>
            </td>
            <td>
                <button class="button"><%= link_to 'View', meal_path(meal) %></button>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>