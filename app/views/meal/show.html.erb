<h1 class="title is-1"><%= @meal.MealName%></h1>

<div class="columns">
    <div class="column">
    <h5 class="title is-5">Served At: <%= link_to @meal.restaurant.RestaurantName, restaurant_path(@meal.restaurant) %></h5>

    <div class="tile is-parent is-8">
      <article class="tile is-child notification is-info">
        <p class="title">Delicious <%= @meal.MealName %> Image:</p>
        <figure class="image is-2by3">
            <img src="<%= @meal.Image %>">
        </figure>
      </article>
    </div>
    </div>
</div>